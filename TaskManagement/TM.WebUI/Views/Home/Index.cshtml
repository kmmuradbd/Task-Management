<script src="https://code.highcharts.com/highcharts.js"></script>
<script>
    Highcharts.chart('onBoard', {
        chart: {
            type: 'pie',
            events: {
                load: function () {
                    var chart = this;

                    // Calculate total
                    var total = chart.series[0].data.reduce(function (sum, point) {
                        return sum + point.y;
                    }, 0);

                    // Add center label
                    chart.renderer.text(
                        '<span style="font-size:20px;font-weight:bold;">' + total + '</span><br>' +
                        '<span style="font-size:12px;color:#666">Total</span>',
                        chart.plotLeft + chart.plotWidth / 2,
                        chart.plotTop + chart.plotHeight / 2
                    ).css({
                        color: '#000',
                        textAlign: 'center'
                    }).attr({
                        align: 'center',
                        zIndex: 5
                    }).add().css({
                        transform: 'translate(-50%, -50%)' // center adjustment
                    });
                }
            }
        },
        title: { text: null },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                innerSize: '60%', // donut hole
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b><br>{point.percentage:.1f} %',
                    distance: -40
                }
            }
        },
        credits: { enabled: false },
        series: [{
            name: 'OnBoard',
            data: [
                { name: 'Pending', y: 50.41, color: "#341f97" },
                { name: 'Settle', y: 21.84, color: "#10ac84" },
                { name: 'Cancel', y: 15.05, color: "#ee5253" }
            ]
        }]
    });
</script>
